<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="eth.sebastiankanz.decentralizedthings.filestorage">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <dist:module
        dist:instant="false"
        dist:title="@string/title_filestorage">
        <dist:delivery>
            <dist:install-time />
        </dist:delivery>

        <dist:fusing dist:include="true" />
    </dist:module>

    <application android:theme="@style/Theme.MyApp">
        <activity
            android:name=".ui.FileStorageActivity"
            android:label="@string/title_activity_file_storage"
            android:theme="@style/Theme.MyApp.NoActionBar"></activity>
    </application>

</manifest>