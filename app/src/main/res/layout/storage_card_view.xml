<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="eth.sebastiankanz.decentralizedthings.data.model.SyncState"/>
        <variable
            name="type"
            type="String" />
        <variable
            name="syncState"
            type="eth.sebastiankanz.decentralizedthings.data.model.SyncState" />
        <variable
            name="creation"
            type="Long" />
        <variable
            name="size"
            type="Long" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/storageCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fileTypeImage"
                android:src="@drawable/ic_menu_camera"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                bind:fileTypeImage="@{type}"
                android:padding="16dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/fileName"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@id/fileTypeImage"
                app:layout_constraintEnd_toStartOf="@id/attribute_container"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="FileName"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/attribute_container"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/syncImage"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/fileSize"
                    android:text="10.28 MB"
                    android:padding="4dp"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    bind:fileSize="@{size}"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/fileCreation"
                    android:text="09:10:11\n10.11.2020"
                    android:padding="4dp"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:maxLines="2"
                    bind:fileCreation="@{creation}"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/syncImage"
                android:src="@drawable/ic_sync"
                android:layout_width="40sp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                bind:syncStateImage="@{syncState}"
                android:padding="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>